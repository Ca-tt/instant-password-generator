{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@": [
        "./src/*"
      ],
      "@ts": [
        "./src/ts/*"
      ],
      "@data": [
        "./src/data/*"
      ],
      "@global": [
        "./src/global/*"
      ],
      "@layout": [
        "./src/components/layout/*"
      ],
      "@generator": [
        "./src/components/generator/*"
      ],
      "@scss": [
        "./src/scss/*"
      ],
    }
  }
}